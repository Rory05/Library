<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
        <link rel="shortcut icon" href="~/images/book.png" type="image/png">
    
    <title>@ViewData["Title"] YourLibrary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light myheader mb-3">
            <div class="container">
                <a class=" librarytext nav-link " asp-controller="Home" asp-action="Index">YourLibrary</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="homebtn mytext" asp-area="" asp-controller="Books" asp-action="Index">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="homebtn mytext" asp-area="" asp-controller="Genres" asp-action="Index">Genres</a>
                        </li>
                        <li class="nav-item">
                            <a class="homebtn mytext" asp-area="" asp-controller="Authors" asp-action="Index">Authors</a>
                        </li>
                        <li class="nav-item">
                            <a class="homebtn mytext" asp-area="" asp-controller="Home" asp-action="Privacy">  Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="homebtn mytext" asp-area="" asp-controller="Users" asp-action="Index">  Users</a>
                        </li>
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="mytext enter"asp-controller="Account" asp-action="Account">@User.Identity.Name</a>

                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <input class="mytext knopka_logout" type="submit" value="Вихід" />
                                </form>
                            }
                            else
                            {
                                <a class="mytext enter" asp-controller="Account" asp-action="Login">Вхід</a>
                                <a class="mytext reg" asp-controller="Account" asp-action="Register">Реєстація</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="kvadrat alltext" style="color: rgb(236, 210, 185)">


            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Library - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

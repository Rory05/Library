@model IEnumerable<Library3.Books>

@{
    ViewData["Title"] = "All books - ";
}

<h1>Всі книжки</h1>
@if (User.IsInRole("admin"))
{
    <p>
        @Html.ActionLink("Create new", "Create", new { id = ViewBag.bookId })
    </p>
}

<table class="table alltext">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PagesNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PagesNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language.Lname)
                </td>
                <td class="td">
                    @if (User.IsInRole("admin"))
                    {

                        <a asp-action="Edit" asp-route-id="@item.Id">Edit |</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete |</a>
                    }

                    @Html.ActionLink("Book", "Details", new { id = item.Id, name = item.Name })

                </td>
            </tr>
        }
    </tbody>
</table>


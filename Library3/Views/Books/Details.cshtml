@model Library3.Books

@{
    ViewData["Title"] = "Book - ";
}

<h1>@ViewBag.bookName</h1>

<div>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookAuthors)
        </dt>
        <dd class="col-sm-10">
            @foreach (var auth in ViewData["authorName"] as List<Authors>)
            {

                @Html.ActionLink(@auth.AuthorName, "Index", "BookAuthors", new { id = auth.Id, name = auth.AuthorName })
                <a> </a>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookGenres)
        </dt>
        <dd class="col-sm-10">
            @foreach (var genr in ViewData["genreName"] as List<Genres>)
            {

                @Html.ActionLink(@genr.Name, "Index", "BookGenres", new { id = genr.Id, name = genr.Name })
                <a> </a>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PagesNum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PagesNum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Language)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Language.Lname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

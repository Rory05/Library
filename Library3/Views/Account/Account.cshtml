
@model Library3.ViewModel.EditUserViewModel
@{
    ViewData["Title"] = "Account - ";
}

<div style="background-color: rgba(62, 54, 54, .83);position: absolute; right: 7%; width: 25%">
      <hr />
      <dl class="row">
          <dt class="col-sm-2">
              @Html.DisplayNameFor(model => User.Identity.Name)
          </dt>
          <dd class="col-sm-10">
              @Html.DisplayFor(model => User.Identity.Name)
          </dd>

          <dt class="col-sm-2">
              <p>Права доступу</p>
          </dt>
          <dd class="col-sm-10">
              @if (User.IsInRole("admin"))
              {
                  <p>Адміністратор</p>
              }
              else
              { <p>Користувач</p>}
          </dd>
          <dt class="col-sm-2">
              <a asp-action="Edit" asp-controller="Users" asp-route-id="id">Edit</a>
          </dt>
          
      </dl>
</div>
